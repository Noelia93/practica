<h2> Incluir un nuevo profesor a la lista </h2>

<!-- #Agrego formulario copiado de Internet.-->

<%= form_for @teacher do |f| %>

  <form>
    <div class="form-group">

      <%= f.label :Profesor %>
      <%= f.text_field :name %>
    </div>
    <div>
      <%= f.collection_check_boxes :course_ids, Course.all, :id, :secondary %><br>
    </div>
    <div>
      <%= f.collection_check_boxes :subject_ids, Subject.all, :id, :name %><br>
    </div>

    <!-- <button type="submit" class="btn btn-primary"> AÃ±adir </button> -->
    <%= f.submit %>
  </form>

<% end %>