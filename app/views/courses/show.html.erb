 <b><i>Asignaturas de <%= @course.secondary %> de la ESO </i></b>

<!-- Voy a mostrar otra lista asociada usando un bucle para ver que se puede hacer tb así.-->
 <table>
   <tr>
     <td>
       <ul>
         <% @course.subjects.each do |subject| %>
           <li><%= link_to subject.name, subject_path(subject) %><br></li>
         <% end %>
       </ul>
     </td>
   </tr>
 </table>



 <button type="button" class="btn btn-success"> <%= link_to " Ver todos los cursos ", courses_path %> </button>
 <button type="button" class="btn btn-warning">  <%= link_to "Editar curso ",  edit_course_path(@course) %> </button>
 <button type="button" class="btn btn-danger">  <%= link_to "Eliminar curso ", course_path(@course), method: :delete, data: { confirm: "¿Estás seguro que quieres eliminar este curso?"}
 %> </button>