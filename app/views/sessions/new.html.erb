
<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
  <form>
    <div class="form-group">
      <label for="exampleInputEmail1"> Email </label>
      <%= f.text_field :email, class: 'form-control', placeholder: "Introduce tu email" %>
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Contraseña</label>
      <%= f.password_field :password_digest, class: 'form-control', placeholder: "Contraseña", type: 'password' %>
    </div>
    <%= f.submit "Enviar", class: "btn btn-primary" %>
  </form>
<%end%>