<h1 align="center"> Profesores </h1>

<table id="customers">
  <tr>
    <th>
      Profesores
    </th>
    <th>
      Responsabilidad
    </th>
    <th>
      Departamento
    </th>
  </tr>
  <!-- Los ordeno alfabÃ©ticamente -->
  <% @teacher.order("name").each do |teacher| %>
    <tr>
      <td>
        <%= link_to teacher.name, teacher_path(teacher) %>
      </td>
      <td>
        <%= link_to teacher.responsibility, teacher_path(teacher) %>
      </td>
      <td>
        <%= link_to teacher.department.name, departments_path %>
      </td>
    </tr>
  <% end %>
</table>

