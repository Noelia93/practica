  <table id="customers">
    <tr>
      <th>
        <b><i>Profesores de <%= @course.secondary %> de la ESO </i></b>
      </th>
    </tr>
    <% @course.teachers.each do |teacher| %>
    <tr>
      <td>
          <%# distintos modos de mostrar los profesores asociados %>
          <%#= teacher.name %>
          <%#= render teacher %>
          <%#= render partial: 'teacher', teacher: teacher, title: "My title" %>
          <%# end %>
          <%#= render @course.teachers %>
        <%= link_to teacher.name, teacher_path(teacher) %><br>
      </td>
    </tr>
    <%end%>
  </table>



