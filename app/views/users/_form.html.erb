<%= render 'shared/errors', obj: @user %> <!-- aquí especifico quién es obj.-->

<%= form_for @user do |f| %>

  <form>
    <div class="form-group">
      <label for="formGroupExampleInput"> Nombre </label>
      <%= f.text_field :username, class: 'form-control', placeholder: "Nombre del usuario" %>
    </div>
    <div class="form-group">
      <label for="exampleInputEmail1"> Email </label>
      <%= f.text_field :email, class: 'form-control', placeholder: "Introduce tu email" %>
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Contraseña</label>
      <%= f.text_field :password, class: 'form-control', placeholder: "Contraseña", type: 'password' %>
    </div>
    <%= f.submit "Enviar", class: "btn btn-primary" %>
  </form>
<%end%>