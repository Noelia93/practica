<h1 align="center"> Los cursos que imparte el centro son </h1>

<table>
  <tr>
    <th>
      Cursos
    </th>
  </tr>
  <% @course.each do |course| %>
    <tr>
      <td>
        <%= link_to course.secondary, course_path(course) %>
      </td>
    </tr>
  <% end %>
</table>


<button type="button" class="btn btn-success"> <%= link_to "Agregar un nuevo curso", new_course_path %></button>